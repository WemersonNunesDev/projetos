generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Client {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senhaHash String
  createAt  DateTime  @default(now())

  reservas  Reservas[]
}

model Livro {
  id                    Int       @id @default(autoincrement())
  titulo                String
  autor                 String
  isbn                  String?   @unique
  ano                   Int?
  quantidadeTotal       Int
  quantidadeDisponivel  Int
  createAt              DateTime  @default(now())

  reservas              Reservas[]
}

model Reservas {
  id            Int            @id @default(autoincrement())
  clienteId     Int
  livroId       Int
  status        ReservaStatus  @default(ATIVA)
  dataReserva   DateTime       @default(now())
  dataDevolucao DateTime?

  cliente Client @relation(fields: [clienteId], references: [id])
  livro   Livro  @relation(fields: [livroId], references: [id])
}

enum ReservaStatus {
  ATIVA
  FINALIZADA
  CANCELADA
}
